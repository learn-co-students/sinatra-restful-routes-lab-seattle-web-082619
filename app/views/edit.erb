<h1>Edit your recipe:</h1>

<form action="/recipes/<%= @recipe.id %>/" method='post'>
  <p><input type="text" value="<%=@recipe.name%>" name="recipe_name"></p>
  <p><input type="text" value="<%=@recipe.ingredients%>" name="recipe_ingredients"></p>
  <p><input type="text" value="<%=@recipe.cook_time%>" name="recipe_cook_time"></p>
  <input type="hidden" id="hidden" name="_method" value="patch">
  <input type="submit" id="Submit" name="submit" value="submit">
</form>
